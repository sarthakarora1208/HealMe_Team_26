<% include ./partials/header %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">

           
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Forgot Password</h1>
            <% include ./partials/messages %>

            <form action="/users/forgot" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Find Account</button>
                <p class="lead mt-4">Login Instead?<a href="/users/login">Login</a></p>

            </form>
            
        </div>
    </div>
</div>
<% include ./partials/footer %>